<!--div class="products-tag green-tag">{% trans %}New{% endtrans %}</div-->
<div class="products-card-wrapper">

    <div class="products-card-share">
        <a href="javascript:void(0)"><i class="mdi mdi-compare-horizontal color-blue"></i></a>
        <!--a href="#"><i class="mdi mdi-heart-outline color-blue"></i></a-->
        <!-- start wish list template -->
        <style>.fa-heart{cursor:pointer;font-size:22px}</style>
        {% from '\/product/wishlist.html.twig' import wishlistTemplate%}
        {{ wishlistTemplate( app.session.get('customerId'), product.wishlistId, product.id) }}
        <!-- end wish list template  -->
    </div>

    <a href="{{ baseUri }}/{{ product.referenceKey }}"><div class="products-card-image" style="background-image: url('{{ product.filename }}')"></div></a>
    <a href="#" class="products-card-name color-blue">{{ product.name }}</a>
    <div class="products-card-values">
        <!--<span class="products-card-values-replaced">{{ product.price }} {{ LayoutFunctions.getCurrencySymbol() }}</span>-->
        <span class="products-card-values-original">{{LayoutFunctions.getMoneyFormat( product.price ?? 0.00)}}</span>
    </div>
</div>

<div class="products-card-overflowed">
    {% set classAddProduct = '' %}
    {% set productItemStockId = 0 %}
    {% if product.colItems|length == 0 %}
        {% set productTitle = 'Unavailable' %}
        {% set classAddProduct = 'btn-modal-product-stock-zero' %}

    {% elseif product.colItems|length == 1 %}
        {% set productTitle = 'Add to Cart' %}
        {% set classAddProduct = 'btn-add-product-cart' %}
        {% set productItemStockId = product.colItems[0].id %}

    {% elseif product.colItems|length > 1 %}
        {% set productTitle = 'See more' %}
        {% set classAddProduct = 'btn-modal-product-specification' %}
    {% endif %}

    <div>
        <!--<p>Localização</p>-->
        <button class="secondary-btn rounded-0 {{ classAddProduct }}" data-product-id="{{ product.id }}" data-product-item-stock-id="{{ productItemStockId }}" data-redirect="{{ baseUri }}/addProductToCart">{{ productTitle|trans }}</button>
    </div>
</div>