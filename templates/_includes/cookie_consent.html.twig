{% if not app.request.cookies.has('cookie-consent-' ~ appVersionCookiePolicy) %}
    <div id="cookie_consent" class="py-3 bg-dark fixed-bottom">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-9">
                    <article class="mb-3 mb-lg-0">
                        <small class="text-white">
                            {% trans %}We use cookies to personalize content and advertising according to your navigation on the site. By continuing to browse the site you are consenting to the use of cookies.{% endtrans %} <a href="{{ baseUri }}/privacy-policy">{% trans %}Visit our Privacy Policy for more information{% endtrans %}</a>.
                        </small>
                    </article>
                </div>
                <div class="col-lg-3 align-self-center">
                    <button type="button" data-action="/cookieConsent" class="btn btn-primary btn-lg btn-block">{% trans %}Cookies Accept{% endtrans %}</button>
                </div>
            </div>
        </div>
    </div>
{% endif %}